<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Expense_Main_Totally"
    android:background="@drawable/backgroundofsplashscreen">


    <TextView
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:text="Hello.. Add your expense here."
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        ></TextView>


    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:text="Enter Amount :"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        ></TextView>

    <TextView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="50dp"
        android:hint=" â‚¹"
        android:textColorHint="@color/black"
        android:textSize="70dp"
        android:background="@drawable/shapeof_expense_main"
        ></TextView>
    <EditText
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="@drawable/shapeof_expense_main"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="140dp"
        android:hint=" 0.00"
        android:textSize="70dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="number"
        ></EditText>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="270dp"
        android:text="Select Category"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        ></TextView>
    <Spinner
        android:id="@+id/select_catagory_spinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="50dp"
        android:textColorHint="@color/black"
        android:textSize="70dp"
        android:paddingRight="30dp"
        android:background="@drawable/shapeof_expense_main"
        ></Spinner>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="385dp"
        android:text="Description"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        ></TextView>

    <EditText
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="50dp"
        android:hint="Note Here"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:background="@drawable/shapeof_expense_main"
        android:textColor="@color/black"
        ></EditText>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/save_button_shape"
        ></ImageButton>
    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="SAVE"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="560dp"
        android:layout_marginLeft="175dp"
        ></TextView>
</RelativeLayout>